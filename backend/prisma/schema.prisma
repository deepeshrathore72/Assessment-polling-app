/// Generates the Prisma Client to access the database
generator client {
  provider = "prisma-client-js"
}

/// PostgreSQL database connection. Set DATABASE_URL in .env
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Users can create polls and vote on options
model User {
  id           Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  passwordHash String
  polls        Poll[]
  votes        Vote[]
}

/// A poll created by a user, containing many options
model Poll {
  id          Int         @id @default(autoincrement())
  question    String
  isPublished Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  createdBy   User         @relation(fields: [createdById], references: [id])
  createdById Int
  options     PollOption[]
}

/// Individual selectable options within a poll
model PollOption {
  id     Int    @id @default(autoincrement())
  text   String
  poll   Poll   @relation(fields: [pollId], references: [id])
  pollId Int
  votes  Vote[]
}

/// Join table modeling many-to-many between User and PollOption
model Vote {
  id       Int        @id @default(autoincrement())
  user     User       @relation(fields: [userId], references: [id])
  userId   Int
  option   PollOption @relation(fields: [optionId], references: [id])
  optionId Int

  @@unique([userId, optionId])
}


